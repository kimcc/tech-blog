{{> navbar }}

<article class="post">
  <a class="post-title" href="/post/{{post.id}}">
    <h2>{{post.title}}</h2>
  </a>
  <p>
    {{post.post_text}}
  </p>
<div class="meta">
  by {{post.user.username}} on {{format_date post.created_at}}
  <span>|</span>
  <p>{{post.comments.length}} {{format_plural "comment" post.comments.length}}</p>
</div>
</article>

<!-- Conditionally render the form element if the user is logged in -->
{{#if loggedIn}}
  <form id="commentForm" class="comment-form">
    <div>
      <label for="commentForm">Add comment</label>
      <textarea id="comment-text" rows="5" name="comment-text"></textarea>
    </div>

    <div>
      <button type="submit">Submit</button>
    </div>
  </form>
{{/if}}

<!-- If comments exist, show the comments -->
{{#if post.comments.length}}
  {{> comments post.comments}}
{{/if}}

{{#if loggedIn}}
  <script src="/javascript/comment.js"></script>
{{/if}}