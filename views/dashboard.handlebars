{{> navbar }}
<div>

  <section class="post-header">
      <h1>Your posts</h1>
      <button id="addPostButton" type="button">Add post</button>
  </section>

  <!-- Modal for adding posts -->
  <div id="modal" class="modal">

    <div class="modal-content">
      <div id="close" class="close">
        <img src="/assets/close.svg" alt="">
      </div>

      <h2>Add post</h2>
      <form class="new-post-form">
        <div>
          <label for="post-title">Title</label>
          <input type="text" id="post-title" name="post-title" />
        </div>
        <div>
          <label for="post-text">Text</label>
          <textarea id="post-text" rows="5" name="post-text"></textarea>
        </div>
        <button type="submit">Submit</button>
      </form>
    </div>

  </div>
    
  <!-- Wrap this in posts.length so that users will only see this content if there are posts -->
  {{#if posts.length}}
    <section class="dashboard-posts">
      <ul class="post-list">
        {{#each posts as |post|}}
        <li>
          {{> post-info post}}
          <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
        </li>
        {{/each}}
      </ul>
    </section>
  {{else}}
    <div>
      <h3 class="posts-none">You don't have any posts yet</h3>
    </div>
  {{/if}}
</div>
<script src="/javascript/add-post.js"></script>