<div class="comments">
  <!-- We can use 'this' to refer to the comments array -->
  {{#each this as |comment|}}
  <section class="comment">
    <div class="meta">
      {{user.username}} on {{format_date comment.created_at}} <!-- This is the same as calling format_date(create_at)-->
    </div>
    <div class="text">
      {{comment.comment_text}}
    </div>
  </section>
  {{/each}}
</div>