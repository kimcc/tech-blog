<div>
  <h3>Comments</h3>
  <!-- We can use 'this' to refer to the comments array -->
  {{#each this as |comment|}}
  <section class="comment">
    <div>
      {{comment.comment_text}}
    </div>
    <div class="meta">
      by {{user.username}} on {{format_date comment.created_at}} <!-- This is the same as calling format_date(create_at)-->
    </div>
  </section>
  {{/each}}
</div>